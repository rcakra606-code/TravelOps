# Application
PORT=3000
NODE_ENV=production

# Security
JWT_SECRET=replace-with-long-random-string-min-48-chars-1234567890abcdef
BCRYPT_COST=10

# Database (leave empty for SQLite local dev, set for Neon Postgres)
DATABASE_URL=
PGSSL=true

# Account Lockout
LOCKOUT_MINUTES=15

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
LOGIN_MAX_PER_WINDOW=10
LOGIN_WINDOW_SEC=60

# Logging
LOG_LEVEL=info

# CORS (optional, comma-separated allowed origins)
CORS_ORIGIN=

# Render / Proxy
TRUST_PROXY=true

# Admin Seed (optional override)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin1234!
